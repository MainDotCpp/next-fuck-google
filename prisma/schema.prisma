generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  
}
// Access log model for tracking all access attempts
model AccessLog {
  id        String   @id @default(cuid())
  requestId String   @unique
  timestamp DateTime @default(now())

  // Request information
  method      String?
  path        String
  fullUrl     String
  queryParams String?

  // Client information
  clientIp       String
  userAgent      String?
  acceptLanguage String?
  referer        String?

  // Check results
  languageCheckPassed Boolean
  language           String?
  allowedLanguages   String[] // JSON array stored as text

  urlParamsCheckPassed Boolean
  urlParams            String?
  urlParamsPattern     String?

  apiCheckPassed Boolean
  apiResponseCode     Int?
  apiResponseMessage   String?
  apiResponseSuccess   Boolean?
  apiResponseStatus    Boolean?
  apiError             String?
  apiResponseTime      Int? // milliseconds

  // Final result
  allowed       Boolean
  blockedReason String?

  // Performance metrics
  totalResponseTime Int // milliseconds

  createdAt DateTime @default(now())

  @@index([timestamp])
  @@index([clientIp])
  @@index([path])
  @@index([allowed])
  @@index([requestId])
  @@map("access_logs")
}

