// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}
// Access log model for tracking all access attempts
model AccessLog {
  id        BigInt   @id @default(autoincrement())
  requestId String   @unique @default(uuid())
  timestamp DateTime @default(now())

  // Request information
  path        String
  queryParams String?

  // Client information
  clientIp  String
  userAgent String?

  // Check results (simplified)
  languageCheckPassed Boolean
  urlParamsCheckPassed Boolean
  apiCheckPassed Boolean
  apiError String? // Only store error if failed

  // Final result
  allowed       Boolean
  blockedReason String?

  // Performance metrics
  responseTime Int // milliseconds

  @@index([timestamp])
  @@index([clientIp])
  @@index([path])
  @@index([allowed])
  @@index([requestId])
  @@map("access_logs")
}

